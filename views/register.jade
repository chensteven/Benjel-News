include ./partials/header.jade

div(class="container content")
	div(class="row")
		div(class="col-sm-4")
			h4(class="form-title") Register Form
			form(id="login-form" name="login-form" method="post" action="/register" class="login-form")
				.form-group
					label(for="username") Username:
					input(type="text" id="login-username" name="login-username" class="form-control input-sm" placeholder="Username")
				.form-group
					label(for="password") Password
					input(type="password" id="login-password" name="login-password" class="form-control input-sm" placeholder="Password")
				button(type="submit" class="btn btn-default btn-sm" name="login-submit" id="login-submit") Submit
				div(class="form-message")
					a(href="/login") Login with your account
					if message.length > 0
						p #{message}